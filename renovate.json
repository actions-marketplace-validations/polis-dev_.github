{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assigneesFromCodeOwners": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "extends": [
    "config:base",
    ":gitSignOff",
    ":timezone(UTC)",
    ":semanticPrefixChore",
    "group:allNonMajor"
  ]
}
